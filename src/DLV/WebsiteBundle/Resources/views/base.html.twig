<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{{ pagetitle }} | Danger Live Voltage</title>

    <link href='https://fonts.googleapis.com/css?family=Arvo:400,700,400italic' rel='stylesheet' type='text/css'>
    <link href="{{ url('dlv_website_homepage') }}bootstrap/css/bootstrap.css" rel="stylesheet">
    <link href="{{ url('dlv_website_homepage') }}bundles/dlvwebsite/css/custom.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body>

    <header>
        <section class="navbar navbar-fixed-top">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <ul class="breadcrumb">
                        {% for breadcrumb in header.breadcrumbs %}

                        <li class="{{ loop.last ? 'active' }}">
                            <a href="{{ breadcrumb.url }}" class="{{ loop.first ? 'navbar-brand' }}">{{ breadcrumb.name }}</a>
                        </li>
                        {% endfor %}
                    </ul>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        {% if header.sessionNavigation.user is defined %}
                            <li>
                                <a href="{{ header.sessionNavigation.user.url }}">
                                    <img id="header-profile-picture" src="{{ header.sessionNavigation.user.picture }}">
                                    {{ header.sessionNavigation.user.name }}
                                </a>
                            </li>
                        {% endif %}
                        {% if header.sessionNavigation.logout is defined %}
                            <li>
                                <a href="{{ header.sessionNavigation.logout.url }}">
                                    {{ header.sessionNavigation.logout.name }}
                                </a>
                            </li>
                        {% endif %}
                        {% if header.sessionNavigation.login is defined %}
                            <li>
                                <a class="facebook-link" href="{{ header.sessionNavigation.login.url }}">
                                    {{ header.sessionNavigation.login.name }}
                                </a>
                            </li>
                        {% endif %}
                        <li class="hidden-xs"><span class="navbar-text">|</span></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                                {{ header.languageOptions.dropdownTitle }} <span class="caret"></span>
                            </a>
                            <ul id="language-dropdown" class="dropdown-menu" role="menu">
                                {% for option in header.languageOptions.options %}
                                <li class="{{ loop.first ? 'active' }}">
                                    <a href="{{ option.url }}">
                                        <span class="glyphicon glyphicon-{{ loop.first ? 'ok' : 'arrow-right' }}"></span>
                                        {{ option.name }}
                                    </a>
                                </li>
                                {{ loop.first ? '<li class="divider"></li>' }}
                                {% endfor %}
                            </ul>
                        </li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </section>
        <section id="banner">
            <div id="speakers">
                <img src="{{ url('dlv_website_homepage') }}bundles/dlvwebsite/images/left_speaker.png">
                <img src="{{ url('dlv_website_homepage') }}bundles/dlvwebsite/images/right_speaker.png">
            </div>
            <div id="main-logo">
                <img src="{{ url('dlv_website_homepage') }}bundles/dlvwebsite/images/dlv_logo.png">
                <h1>Danger Live Voltage</h1>
            </div>
        </section>
        <section id="main-nav" class="container hidden-xs">
            <nav class="col-lg-12">
                <ul class="nav nav-tabs">
                    {% for page in header.pages %}
                        <li class="{{ page.active ? 'active' }}">
                            <a href="{{ page.url }}">{{ page.name }}</a>
                        </li>
                    {% endfor %}
                </ul>
                <ul id="sub-nav">
                    {% for subpage in header.subPages %}
                        <li class="{{ subpage.active ? 'active' }}">
                            <a href="{{ subpage.url }}">{{ subpage.name }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </nav>
        </section>
    </header>

    <div class="container">
        <section id="content" class="col-md-9">
            {{ vardump|raw }}

            {% block content %}
            {% endblock %}

        </section>
        <aside class="hidden-xs hidden-sm col-md-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Sponsors</h2>
                </div>
                <div class="panel-body">
                    * Sponsors list *
                </div>
            </div>
        </aside>
    </div>

    <footer>

    </footer>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="{{ url('dlv_website_homepage') }}bootstrap/js/bootstrap.js"></script>

    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="{{ url('dlv_website_homepage') }}bootstrap/js/ie10-viewport-bug-workaround.js"></script>
    
    {% block scripts %}
        
    {% endblock %}
</body>
</html>
